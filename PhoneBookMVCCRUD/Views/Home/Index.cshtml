@model IQueryable<PhoneBookRecord>
<h2>PhoneBook</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>LastName</th>
            <th>FirstName</th>
            <th>FathresName</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (PhoneBookRecord item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Details" asp-action="DetailsShow" asp-route-id="@item.Id" class="linkDetails" >@item.Id</a>
                    </td>
                    <td>@item.LastName</td>
                    <td>@item.FirstName</td>
                    <td>@item.FathersName</td>
                </tr>
            }
        }
    </tbody>
</table>


